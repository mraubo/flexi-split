---
import "../styles/global.css";
import Header from "../components/layout/Header.astro";
import BottomNav from "../components/layout/BottomNav.astro";
import Footer from "../components/Footer.astro";
import QueryClientProvider from "../components/QueryClientProvider";

interface Props {
  title?: string;
}

const { title = "FlexiSplit" } = Astro.props;
const isHomePage = Astro.url.pathname === "/";
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@200..800&family=Lora:wght@400..700&family=IBM+Plex+Mono:wght@100..700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-background text-foreground min-h-screen flex flex-col">
    <QueryClientProvider client:load>
      <Header title={title} />

      <main class="flex-1 pb-24 md:pb-0">
        <slot />
      </main>

      {isHomePage && <Footer class={Astro.locals.user ? "pb-10 md:pb-0" : ""} />}

      <BottomNav />
    </QueryClientProvider>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
